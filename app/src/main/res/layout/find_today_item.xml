<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6.0dip"
                                    android:clickable="true"
                                    android:foreground="?android:selectableItemBackground"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="5.0dip"
                                    app:cardElevation="1.0dip">

    <RelativeLayout
        android:id="@+id/todayItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/todayImage"
            android:layout_width="170.0dip"
            android:layout_height="170.0dip"
            />

        <TextView
            android:id="@+id/todayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todayImage"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="邪恶的力量"
            android:textColor="@color/bg_303030"
            android:textSize="15.0sp"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/todayTitle"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="6.0dip">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/todayHead"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentTop="true"
                android:src="@drawable/usernormal"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/todayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/todayHead"
                android:text="张澜"
                android:textColor="@color/bg_969696"
                android:textSize="12.0sp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/todayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl"
            android:layout_marginBottom="12.0dip"
            android:layout_marginRight="12.0dip"
            android:text="￥1200"
            android:textColor="@color/bg_e3242e"
            android:textSize="16.0sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>