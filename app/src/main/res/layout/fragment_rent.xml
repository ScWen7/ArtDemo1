<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/status_bar"/>

    <TextView
        android:id="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:background="@color/black"
        android:gravity="center"
        android:text="我要租赁"
        android:textColor="@color/white"
        android:textSize="18.0sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/rent_banner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="16.0dip">

                <ImageView
                    android:id="@+id/rent_household"
                    android:layout_width="0.0dip"
                    android:layout_height="120.0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/rent_household"/>

                <ImageView
                    android:id="@+id/rent_grogshop"
                    android:layout_width="0.0dip"
                    android:layout_height="120.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/rent_grogshop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip">

                <ImageView
                    android:id="@+id/rent_oa"
                    android:layout_width="0.0dip"
                    android:layout_height="120.0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/rent_oa"/>

                <ImageView
                    android:id="@+id/rent_hallway"
                    android:layout_width="0.0dip"
                    android:layout_height="120.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/rent_hallway"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/rent_entry"
                android:layout_width="match_parent"
                android:layout_height="250.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/rent_entry"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="10.0dip"
                android:src="@drawable/rent_guide"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>