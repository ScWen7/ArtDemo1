<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_Session"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="16.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_hometitile"
            android:drawablePadding="2.0dip"
            android:text="专场精选"
            android:textColor="@color/bg_303030"
            android:textSize="15.0sp"/>

        <ImageView
            android:id="@+id/sessionMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_homemore"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivSession"
        android:layout_width="fill_parent"
        android:layout_height="170.0dip"
        android:layout_margin="10.0dip"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip">

        <TextView
            android:id="@+id/sessionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="端午仲夏一起来"
            android:textColor="@color/bg_646464"
            android:textSize="14.0sp"/>

        <TextView
            android:id="@+id/sessionNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="100"
            android:textColor="@color/bg_969696"
            android:textSize="12.0sp"/>
        <ImageView
            android:id="@+id/sessionFcous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="2.0dip"
            android:layout_toLeftOf="@id/sessionNum"
            android:src="@drawable/icon_homefocus"/>


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:background="@color/gray_f2f2f2"/>
</LinearLayout>