<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonBottomTab">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@drawable/nav_main_text_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">4.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <color name="white">#fff</color>
</resources>
